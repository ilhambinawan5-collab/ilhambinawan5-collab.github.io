<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Parkour Jump Game</title>
  <style>
    body {
      margin: 0;
      overflow: hidden;
      background-color: #87ceeb;
      font-family: sans-serif;
    }
    #game {
      position: relative;
      width: 100%;
      height: 100vh;
      background: linear-gradient(to top, #87ceeb, #ffffff);
    }
    #player {
      position: absolute;
      bottom: 50px;
      left: 50px;
      width: 50px;
      height: 50px;
      background-color: red;
      border-radius: 10px;
    }
    .obstacle {
      position: absolute;
      bottom: 50px;
      width: 30px;
      height: 50px;
      background-color: black;
      animation: moveObstacle 3s linear infinite;
    }
    @keyframes moveObstacle {
      from { right: -30px; }
      to { right: 100vw; }
    }
    #score {
      position: absolute;
      top: 10px;
      left: 10px;
      font-size: 24px;
      color: #333;
    }
  </style>
</head>
<body>

<div id="game">
  <div id="player"></div>
  <div id="score">Score: 0</div>
</div>

<script>
  const player = document.getElementById('player');
  const game = document.getElementById('game');
  const scoreDisplay = document.getElementById('score');
  let isJumping = false;
  let score = 0;

  function jump() {
    if (isJumping) return;
    isJumping = true;
    let jumpHeight = 0;
    const up = setInterval(() => {
      if (jumpHeight >= 100) {
        clearInterval(up);
        const down = setInterval(() => {
          if (jumpHeight <= 0) {
            clearInterval(down);
            isJumping = false;
          }
          jumpHeight -= 5;
          player.style.bottom = 50 + jumpHeight + 'px';
        }, 20);
      }
      jumpHeight += 5;
      player.style.bottom = 50 + jumpHeight + 'px';
    }, 20);
  }

  function createObstacle() {
    const obstacle = document.createElement('div');
    obstacle.classList.add('obstacle');
    obstacle.style.right = '-30px';
    game.appendChild(obstacle);

    const move = setInterval(() => {
      const obstacleRight = parseInt(obstacle.style.right);
      obstacle.style.right = obstacleRight + 5 + 'px';

      const playerLeft = player.offsetLeft;
      const playerRight = playerLeft + player.offsetWidth;
      const obstacleLeft = game.offsetWidth - (obstacleRight + 30);
      const obstacleRightEdge = obstacleLeft + 30;

      const playerBottom = parseInt(player.style.bottom);
      if (
        playerRight > obstacleLeft &&
        playerLeft < obstacleRightEdge &&
        playerBottom < 100
      ) {
        alert('Game Over! Skor kamu: ' + score);
        location.reload();
        clearInterval(move);
      }

      if (obstacleRight > game.offsetWidth) {
        clearInterval(move);
        game.removeChild(obstacle);
        score++;
        scoreDisplay.textContent = 'Score: ' + score;
      }
    }, 30);
  }

  setInterval(createObstacle, 2000);
  window.addEventListener('keydown', (e) => {
    if (e.code === 'Space') jump();
  });
</script>

</body>
</html>
